header
  h5 Features

  hr.biggest

main
  h4(ng-if="vm.project.files.features.length") Uploaded features documents

  ul.files
    li(ng-repeat="file in vm.project.files.features")
      a(ng-if="file.downloadUrl" href="{{file.downloadUrl}}" target="_blank") {{file.filename}}

  h4 Features &amp; descriptions

  ul.features-descriptions
    li(ng-repeat="feature in vm.project.features")
      label {{ feature.title }}

      p.description {{ feature.description }}

      .notes(ng-if="feature.notes.length > 0")
        label Notes:

        p {{feature.notes}}
